{
	"collectCoverage": true,
	"coverageDirectory": "coverage",
	"coveragePathIgnorePatterns": ["/node_modules/", "!*.d.ts", "index.ts"],

	"moduleFileExtensions": ["js", "ts", "d.ts"],

	"preset": "ts-jest",

	"testEnvironment": "node",
	"testMatch": ["**/*.spec.ts"],
	"testPathIgnorePatterns": ["/node_modules/"]
}
